{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "ES6",
      "ScriptHost"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "paths": {
      "Api/*": [
        "./api-v1/*"
      ],
      "Controllers/*": [
        "./controllers/*"
      ],
      "Routes/*": [
        "./routes/*"
      ],
      "Startup/*": [
        "./startup/*"
      ],
      "Utils/*": [
        "./utils/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
